{% extends 'game.html.twig' %}
{% block content %}
    <p class="text-center">
        Advanced stats: <a class="B" href="{{ path('Game/Headquarter/Income') }}">Income</a> - <a class="B" href="{{ path('Game/Headquarter/Army') }}">Army</a> - <a class="B" href="{{ path('Game/Headquarter/Infrastructure') }}">Infrastructure</a>
    </p>

    <table class="table text-center">
        <tr class="tabletop">
            <td colspan="2"><b>Income</b></td>
        </tr>
        <tr>
            <td width="150">Income Economic Centers:</td>
            {% set incomeEc = player.income.cash - incomePop %}
            <td width="350">{{ incomeEc|number_format }}</td>
        </tr>
        <tr>
            <td width="150">Income population:</td>
            <td width="350">{{ incomePop|number_format }}</td>
        </tr>
        <tr>
            <td width="150">Upkeep:</td>
            <td width="350">-{{ player.upkeep.cash|number_format }}</td>
        </tr>
        <tr>
            <td width="150">Net Income: </td>
            {% set incomeNet = player.income.cash - player.upkeep.cash %}
            {% if incomeNet < 0 %}
                <td width="350"><div class="bad">{{ incomeNet }}</div></td>
            {% else %}
                <td width="350"><div class="good">+{{ incomeNet }}</div></td>
            {% endif %}
        </tr>
    </table>

    <br />
    <br />

    <table class="table text-center">
        <tr class="tabletop">
            <td colspan="2" width="400"><b>Food Production</b></td>
        </tr>
        <tr>
            <td width="150">Production:</td>
            <td width="250">{{ player.income.food|number_format }}</td>
        </tr>
        <tr>
            <td width="150">Consumption:</td>
            <td width="250">-{{ player.upkeep.food|number_format }}</td>
        </tr>
        <tr>
            <td width="150">Net:</td>
            {% set foodNet = player.income.food - player.upkeep.food %}
            {% if foodNet < 0 %}
                <td width="250"><div class="bad">{{ foodNet }}</div></td>
            {% else %}
                <td width="250"><div class="good">+{{ foodNet }}</div></td>
            {% endif %}
        </tr>
    </table>

    <br />
    <br />

    <table class="table text-center">
        <tr class="tabletop">
            <td colspan="2" width="400"><b>Resources</b></td>
        </tr>
        <tr>
            <td width="150">Steel:</td>
            <td width="250">{{ player.income.steel|number_format }}</td>
        </tr>
        <tr>
            <td width="150">Wood:</td>
            <td width="250">{{ player.income.wood|number_format }}</td>
        </tr>
    </table>
{% endblock %}
