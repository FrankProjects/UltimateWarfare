{% extends 'game.html.twig' %}

{% block title %}Ultimate Warfare - Buy region{% endblock title %}

{% block content %}
    <table class="table text-center">
        <tr>
            <td class="tabletop" colspan="2"><b>Region</b></td>
        </tr>
        <tr>
            <td width="120" rowspan="2">
                <img src="{{ asset('images/map/' ~ region.image ~ '-3.jpg') }}" alt="Region {{ region.id }}" width="120" height="100"><br />
            </td>
            <td width="580">Location: <a class="B" href="{{ path('Game/World/Country', {'countryId': region.worldCountry.id}) }}">{{ region.x }}, {{ region.y }}</a>: {{ region.region }}</td>
        </tr>
        <tr>
            <td>
                <form action="{{ path('Game/World/Region/Buy', {'regionId': region.id}) }}" method = "post">
                    <div>Do you really want to buy this region for $ {{ price }} ?</div>
                    <input class="btn btn-primary" type="submit" name="submit" value="Buy" />
                </form>
            </td>
        </tr>
    </table>
{% endblock %}
