{% extends 'game.html.twig' %}

{% block title %}Ultimate Warfare - Battle{% endblock title %}

{% block content %}
    <table class="table text-center">
        <tr class="tabletop">
            <td><b>Battle</b></td>
        </tr>
        <tr>
            <td>
                {% for battlePhase in battleResults.battlePhases %}

                    {% for line in battlePhase.battleLog %}
                        <p>{{ line }}</p>
                    {% endfor %}
                {% endfor %}

                {% if hasWon %}
                    You Won!
                {% else %}
                    You Lost!
                {% endif %}
            </td>
        </tr>
    </table>
{% endblock %}
