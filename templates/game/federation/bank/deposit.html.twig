{% extends 'game.html.twig' %}

{% block title %}Ultimate Warfare - Federation bank deposit{% endblock title %}

{% block content %}
    <table class="table text text-center">
        <tr>
            <td class="tabletop" colspan="3"><b>Federation bank deposit</b></td>
        </tr>
        <tr>
            <td colspan="3">
                <b>Adviser:</b><br />
                Welcome <strong>{{ player.name }}</strong>,
                <br />
                You can make deposits to your Federation bank here!
                <br />
                <br />
            </td>
        </tr>
        <tr>
            <td colspan="3" class="tabletop"><b>Cash and resources</b></td>
        </tr>
        <tr>
            <td width="200">Resources</td>
            <td width="200">You</td>
            <td width="200">Bank</td>
        </tr>
        <tr>
            <td>Cash:</td>
            <td>$ {{ player.resources.cash }}</td>
            <td>$ {{ player.federation.resources.cash }}</td>
        </tr>
        <tr>
            <td>Wood:</td>
            <td>{{ player.resources.wood }}</td>
            <td>{{ player.federation.resources.wood }}</td>
        </tr>
        <tr>
            <td>Steel:</td>
            <td>{{ player.resources.steel }}</td>
            <td>{{ player.federation.resources.steel }}</td>
        </tr>
        <tr>
            <td>Food:</td>
            <td>{{ player.resources.food }}</td>
            <td>{{ player.federation.resources.food }}</td>
        </tr>
    </table>

    <br />
    <br />

    <form method="post" action="{{ path('Game/Federation/Bank/Deposit') }}">
        <table class="table text text-center">
            <tr>
                <td class="tabletop" colspan="2"><b>Deposit</b></td>
            </tr>
            <tr>
                <td width="100">Resource: </td>
                <td width="200">Amount: </td>
            </tr>
            <tr>
                <td>Cash:</td>
                <td><input type="text" size="12" name="cash"></td>
            </tr>
            <tr>
                <td>Wood:</td>
                <td><input type="text" size="12" name="wood"></td>
            </tr>
            <tr>
                <td>Steel:</td>
                <td><input type="text" size="12" name="steel"></td>
            </tr>
            <tr>
                <td>Food:</td>
                <td><input type="text" size="12" name="food"></td>
            </tr>
            <tr>
                <td>
                    <input class="btn btn-primary" type="submit" name="submit" value="Donate">
                </td>
            </tr>
        </table>
    </form>
{% endblock %}
