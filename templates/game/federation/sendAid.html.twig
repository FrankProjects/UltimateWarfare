{% extends 'game.html.twig' %}

{% block title %}Ultimate Warfare - Federation aid{% endblock title %}

{% block content %}
    <table class="table text-center">
        <tr class="tabletop">
            <td><b>Send Aid</b></td>
        </tr>
        <tr>
            <td>
                <b>Adviser:</b>
                <br />
                Welcome <strong>{{ player.name }}</strong>,
                <br />

                You can aid Federation members here!
                <br />
            </td>
        </tr>
    </table>

    <br />
    <br />

    <form method="post" action="{{ path('Game/Federation/SendAid') }}">
        <table width="450" class="table text-center">
            <tr class="tabletop">
                <td colspan="3"><b>Resources</b></td>
            </tr>
            <tr>
                <td width="100">Resources:</td>
                <td width="100">You have:</td>
                <td width="250">Amount:</td>
            </tr>
            <tr>
                <td>Cash: </td>
                <td>{{ player.resources.cash }}</td>
                <td><input type="text" class="form-control" name="resources[cash]"></td>
            </tr>
            <tr>
                <td>Wood: </td>
                <td>{{ player.resources.wood }}</td>
                <td><input type="text" class="form-control" name="resources[wood]"></td>
            </tr>
            <tr>
                <td>Steel: </td>
                <td>{{ player.resources.steel }}</td>
                <td><input type="text" class="form-control" name="resources[steel]"></td>
            </tr>
            <tr>
                <td>Food:</td>
                <td>{{ player.resources.food }}</td>
                <td><input type="text" class="form-control" name="resources[food]"></td>
            </tr>
            <tr>
                <td>To Player</td>
                <td colspan="2">
                    <select class="form-select" aria-label="to player" name="player">
                        {% for federationPlayer in player.federation.players %}
                            <option value="{{ federationPlayer.id }}">{{ federationPlayer.name }}</option>
                        {% endfor %}
                    </select>
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <input class="btn btn-primary" type="submit" name="submit" value="Send">
                </td>
            </tr>
        </table>
    </form>
{% endblock %}
